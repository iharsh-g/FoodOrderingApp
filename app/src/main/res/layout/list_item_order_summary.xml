<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2.5dp"
    android:layout_marginBottom="2.5dp">

    <TextView
        android:id="@+id/tv_meal_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="30dp"
        android:layout_toStartOf="@id/iv_permanent"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="sdamflkskdlfnklngln" />

    <ImageView
        android:id="@+id/iv_permanent"
        android:layout_width="15dp"
        android:layout_height="10dp"
        android:layout_marginTop="7dp"
        android:layout_toLeftOf="@id/tv_amount_summary"
        android:src="@drawable/rupee_im" />

    <TextView
        android:id="@+id/tv_amount_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="613" />

    <ImageView
        android:id="@+id/iv_permanent2"
        android:layout_width="15dp"
        android:layout_height="10dp"
        android:layout_below="@id/tv_meal_summary"
        android:layout_marginTop="6dp"
        android:layout_toLeftOf="@id/tv_price_summary"
        android:src="@drawable/rupee_im" />

    <TextView
        android:id="@+id/tv_price_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_meal_summary"
        android:layout_alignParentEnd="true"
        android:textColor="@color/gray"
        android:textSize="14sp"
        tools:text="6" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_price_summary"
        android:layout_marginTop="5dp"
        android:background="#949595" />

</RelativeLayout>